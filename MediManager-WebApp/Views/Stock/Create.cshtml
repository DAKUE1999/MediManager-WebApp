@model MediManager_WebApp.Models.ViewModels.StockViewModel

@{
    ViewData["Title"] = "Medikament einlagern";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Warehouse" asp-action="Index">Lager</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-route-warehouseId="@ViewBag.WarehouseId">@ViewBag.WarehouseName</a></li>
            <li class="breadcrumb-item active" aria-current="page">Einlagern</li>
        </ol>
    </nav>

    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <!-- Erste Eingabemaske: Nur PZN -->
            <div class="card" id="pznInput">
                <div class="card-header">
                    <h5 class="card-title mb-0">PZN eingeben</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="pzn" class="form-label">PZN</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="pzn" name="pzn" placeholder="PZN eingeben oder scannen...">
                            <button class="btn btn-primary" type="button" onclick="checkPZN()">Prüfen</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Wird angezeigt, wenn Medikament gefunden wurde -->
            <div class="card d-none" id="stockInput">
                <div class="card-header">
                    <h5 class="card-title mb-0">Medikament einlagern</h5>
                </div>
                <div class="card-body">
                    <form id="stockForm" asp-action="Create" method="post">
                        <input type="hidden" asp-for="WarehouseID" />
                        <input type="hidden" asp-for="MedicationID" />
                        <input type="hidden" asp-for="MedicationGroupID" />

                        <!-- Anzeige der Medikamenteninformationen -->
                        <div class="alert alert-info">
                            <div><strong>Name:</strong> <span id="medName"></span></div>
                            <div><strong>Hersteller:</strong> <span id="medManufacturer"></span></div>
                            <div><strong>Gruppe:</strong> <span id="medGroup"></span></div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ShelfID" class="control-label">Regal</label>
                            <select asp-for="ShelfID" class="form-select" asp-items="ViewBag.Shelves">
                                <option value="">-- Bitte wählen --</option>
                            </select>
                            <span asp-validation-for="ShelfID" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Batch" class="control-label">Charge</label>
                            <input asp-for="Batch" class="form-control" />
                            <span asp-validation-for="Batch" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SerialNumber" class="control-label">Seriennummer</label>
                            <input asp-for="SerialNumber" class="form-control" />
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ExpiryDate" class="control-label">Verfallsdatum</label>
                            <input asp-for="ExpiryDate" class="form-control" type="date" />
                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Quantity" class="control-label">Menge</label>
                            <input asp-for="Quantity" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Einlagern</button>
                            <button type="button" class="btn btn-secondary" onclick="resetForm()">Zurück</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function checkPZN() {
            const pzn = document.getElementById('pzn').value;
            if (!pzn) {
                alert('Bitte geben Sie eine PZN ein.');
                return;
            }

            fetch(`/Stock/CheckPZN/${pzn}`)
                .then(response => response.json())
                .then(data => {
                    if (data.found) {
                        // Medikament gefunden -> Einlagerungsformular anzeigen
                        showStockForm(data.medication);
                    } else {
                        // Medikament nicht gefunden -> Nachfragen
                        if (confirm('Medikament nicht gefunden. Möchten Sie es anlegen?')) {
                            window.location.href = `/Medication/Create?pzn=${pzn}&returnUrl=${encodeURIComponent(window.location.href)}`;
                        }
                    }
                });
        }

        function showStockForm(medication) {
            document.getElementById('pznInput').classList.add('d-none');
            document.getElementById('stockInput').classList.remove('d-none');
            
            // Felder füllen
            document.getElementById('medName').textContent = medication.name;
            document.getElementById('medManufacturer').textContent = medication.manufacturer;
            document.getElementById('medGroup').textContent = medication.groupName;
            document.getElementById('MedicationID').value = medication.id;
            document.getElementById('MedicationGroupID').value = medication.groupId;
        }

        function resetForm() {
            document.getElementById('pzn').value = '';
            document.getElementById('pznInput').classList.remove('d-none');
            document.getElementById('stockInput').classList.add('d-none');
        }
    </script>
}