@model MediManager_WebApp.Models.MedicationGroup

@{
    ViewData["Title"] = "Medikamentengruppe erstellen";
}

<div class="container-fluid">
    <h1>Neue Medikamentengruppe</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="SupplyNumber" class="control-label">Versorgungsnummer</label>
                    <input asp-for="SupplyNumber" class="form-control" />
                    <span asp-validation-for="SupplyNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="QuantityUnitID" class="control-label">Mengeneinheit</label>
                    <select asp-for="QuantityUnitID" class="form-select" asp-items="ViewBag.QuantityUnits">
                        <option value="">-- Bitte wählen --</option>
                    </select>
                    <span asp-validation-for="QuantityUnitID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Erstellen" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Zurück zur Liste</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}